<script>
document.addEventListener("DOMContentLoaded", () => {
  const text = `Hi there! 🤖 I'm Astro. Pravalika's Assistant\n\nWelcome to Pravalika Kethadi’s portfolio site. I'm here to walk you through her Salesforce journey, skills, and accomplishments.\n\nIf you're a hiring manager or recruiter, you're about to discover someone passionate, certified, and ready to innovate.\n\nReady to explore?`;

  let index = 0;
  const typingText = document.getElementById("typingText");
  const typingIndicator = document.getElementById("typingIndicator");
  const ctaButton = document.getElementById("yesBtn");
  const chatBot = document.getElementById("chatBot"); 
  const astroBot = document.getElementById("astroBot");
  const astroContainer = document.getElementById("astroContainer");

  const typingSpeed = 30;
  let buttonShown = false;

  function showCTAButton() {
    if (!buttonShown) {
      buttonShown = true;
      ctaButton.style.display = "inline-block";
    }
  }

function showChatBot() {
  const wrapper = document.getElementById("chatBotWrapper");
  const chatHint = document.getElementById("chatHint");
  const astroContainer = document.getElementById("astroContainer");

  if (wrapper) wrapper.style.display = "block";
  if (chatHint) chatHint.style.display = "block";
  if (astroContainer) astroContainer.style.display = "none";
}


  function type() {
    if (index < text.length) {
      typingText.innerHTML += text.charAt(index);
      index++;
      setTimeout(type, typingSpeed);
    } else {
      typingIndicator.style.display = "none";
      speakQuestion();
      showChatBot();
      setTimeout(() => showCTAButton(), 5000);
    }
  }

  function speakQuestion() {
    const question = "Do you want to explore Pravalika's portfolio?";
    const utterance = new SpeechSynthesisUtterance(question);
    let spoken = false;

    const assignVoiceAndSpeak = () => {
      const voices = speechSynthesis.getVoices();
      const selected = voices.find(v => v.name.includes("Google") || v.lang.startsWith("en"));
      if (selected) utterance.voice = selected;

      if (!spoken) {
        spoken = true;
        speechSynthesis.speak(utterance);
        utterance.onend = showCTAButton;
      }
    };

    assignVoiceAndSpeak();
    if (speechSynthesis.getVoices().length === 0) {
      speechSynthesis.onvoiceschanged = assignVoiceAndSpeak;
    }
  }

  ctaButton.addEventListener("click", () => {
    document.getElementById("popSound").play();
    speechSynthesis.speak(new SpeechSynthesisUtterance("Let's explore Pravalika's portfolio!"));
    document.getElementById("landing").style.display = "none";
    document.getElementById("mainContent").style.display = "block";
    window.scrollTo(0, 0);
  });

 document.getElementById("chatBotWrapper").addEventListener("click", () => {

    chatBot.style.transform = "scale(1.1)";
    setTimeout(() => chatBot.style.transform = "scale(1)", 300);

    const messages = [
      "Did you know Pravalika built this Portfolio inside Salesforce?",
      "You're about to see some real development magic!",
      "Click 'Yes lets go' to unlock awesome."
    ];
    let delay = 0;
    for (let msg of messages) {
      setTimeout(() => {
        const line = new SpeechSynthesisUtterance(msg);
        speechSynthesis.speak(line);
      }, delay);
      delay += 3000;
    }
  });

  const canvas = document.getElementById("particles");
  const ctx = canvas.getContext("2d");
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  let particlesArray = [];
  for (let i = 0; i < 80; i++) {
    particlesArray.push({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      size: Math.random() * 3 + 1,
      speedX: Math.random() * 1 - 0.5,
      speedY: Math.random() * 1 - 0.5
    });
  }
  function animateParticles() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particlesArray.forEach(p => {
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
      ctx.fillStyle = "#ffffff44";
      ctx.fill();
      p.x += p.speedX;
      p.y += p.speedY;
      if (p.x < 0 || p.x > canvas.width) p.speedX *= -1;
      if (p.y < 0 || p.y > canvas.height) p.speedY *= -1;
    });
    requestAnimationFrame(animateParticles);
  }

  function reveal() {
    const elements = document.querySelectorAll('.hidden');
    elements.forEach(el => {
      const windowHeight = window.innerHeight;
      const elementTop = el.getBoundingClientRect().top;
      if (elementTop < windowHeight - 150) {
        el.classList.add("visible");
      }
    });
  }

  window.addEventListener("scroll", reveal);
  animateParticles();
  type();
});
</script>

    </body>
    </html>
